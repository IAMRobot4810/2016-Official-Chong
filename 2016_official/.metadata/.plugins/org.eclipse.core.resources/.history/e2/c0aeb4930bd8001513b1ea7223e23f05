#ifndef AUTO_H
#define AUTO_H


class Auto{
private:

	bool targetAcquired;
	enum AutonPos{LEFT, RIGHT, NONE};
	enum AutonMode{TERRAIN, ARM, NONE};
	AutonMode mode;
	AutonPos pos;
public:
	Auto();
	Auto(int mode, int pos);
	~Auto();

	void InternalAutonChooser();
	void TerrainCrosser();
	void ArmWallCrosser();
	void SetUpToShoot();
	void Shoot();
	bool Vision();

};



#endif /* SRC_AUTO_H_ */
