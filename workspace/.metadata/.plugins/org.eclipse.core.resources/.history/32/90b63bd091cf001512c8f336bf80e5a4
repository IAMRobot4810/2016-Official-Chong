#include "Control.h"

Control::Control(){

	lStick = new Joystick(0);
	rStick = new Joystick(1);
	drive = new DriveSystem();
	lStickIn = lStick->GetY();
	rStickIn = rStick->GetY();

}

Control::~Control(){

	delete lStick;
	delete rStick;
	delete drive;

}

